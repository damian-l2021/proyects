---
import Footer from "../components/footer.astro";
import { links } from "../js/links";
import BurgerMenu from "../components/burgerMenu.astro";
import Menu from "./menu.astro";
import Header from "../components/header.astro";
---

<head>
    <meta charset="utf-8">
</head>

<Header links={links}/>
<BurgerMenu active={false}/>
<Menu/>
<div class="w-full h-screen px-96 py-48 bg-zinc-800 max-xl:px-4">
    <h1 class="text-4xl text-zinc-100 mb-8">Formulario de Inscripción</h1>
    <form action="/src/js/handleSubmit.js">
        <div class="flex flex-col gap-8">
            <input type="text" class=" outline-transition w-full p-4 rounded-md border-none focus:outline outline-offset-4 focus:outline-4 focus:outline-blue-200" placeholder="Nombre">
            <input type="email" class="outline-transition w-full p-4 rounded-md border-none focus:outline outline-offset-4 focus:outline-4 focus:outline-blue-200" placeholder="Email">
            <textarea class="outline-transition w-full h-48 p-4 rounded-md border-none focus:outline outline-offset-4 focus:outline-4 focus:outline-blue-200" placeholder="Agrega una descripción"/>
            <button type="submit" class="bg-zinc-200 rounded-md w-1/3 py-4 text-zinc-800 font-bold">Enviar</button>
        </div>
    </form>
</div>
<Footer/>

<style>
    .outline-transition
    {
        transition: outline .13s ease-in-out;
    }
</style>